<p id="notice"><%= notice %></p>

<h1>Moedas</h1>
<%= data_br(Date.today)%><br>
<%= nome_aplicacao %><br>
<%= cookies[:curso]%>
<table>
  <thead>
    <tr>
      <th><%=@moedas.human_attribute_name(:description)%></th>
      <th><%=@moedas.human_attribute_name(:acronym)%></th>
      <th><%=@moedas.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moedas.each do |moeda| %>
      <tr>
        <td><%= moeda.description %></td>
        <td><%= moeda.acronym %></td>
        <td><%= moeda.url_image %></td>
        <td><img src="<%= moeda.url_image %>" width="50px" height="50px"></td>
        <td><%= link_to "Mostrar", moeda %></td> <!---t(links.show) traduÃ§Ãµes--->
        <td><%= link_to "Editar", edit_moeda_path(moeda) %></td>
        <td><%= link_to "Deletar", moeda, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        <br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Moeda', new_moeda_path %>

