<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count)%></h1>

<table class = "table table-hover table-active">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.name %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to "Mostrar", mining_type %></td>
        <td><%= link_to "Editar", edit_mining_type_path(mining_type) %></td>
        <td><%= link_to "Apagar", mining_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.mining_type'), new_mining_type_path, class:"btn btn-primary" %>
